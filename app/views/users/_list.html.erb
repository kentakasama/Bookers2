       <%= pluralize(book.errors.count,"error") %>prohibited this obj from being saved:
      <ul>
        <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
<div class="col-xs-3">
	<h2>User Info</h2>
		<h3>Image</h3>
		<%= attachment_image_tag user, :user_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
		<table class="table">
			<tbody><tr></tr>
		      <tr>
		    	  <th>name</th>
		    	  <th><%= user.name %></th>
		      </tr>
		      <tr>
		    	  <th>introduction</th>
		    	  <th><%= user.introduction %></th>
		      </tr>
		   </tbody>
		</table>
		<div class="row">
			<%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
		</div>

	<h2>New Book</h2>
	<%= form_for(book) do |t|%>
	<div class="field row">
		<label>Title</label>
		<%= t.text_field :title, class: "col-xs-12 book_title" %>
	</div>
	<div class="field row">
		<label>Opinion</label>
		<%= t.text_area :opinion, class: "col-xs-12 book_body" %>
	</div>
	<div class="actions row">
		<%= t.submit 'Create Book', class: "btn btn-primary col-xs-12"%>
	</div>
	<% end %>
</div>

