
<h1>User Info</h1>
<%= form_for(@user) do |f|%>
<div class="field row">
	<label>Name</label>
	<%= f.text_field :name, class: "name" %>
</div>
<div class="field row">
	<label>Image</label>
	<%= f.attachment_field :user_image, class: "user_image" %>
<div class="field row">
	<label>Introduction</label>
	<%= f.text_area :introduction, class: "introduction" %>
</div>
<div class="actions row">
	<%= f.submit 'Update User' %>
</div>
<% end %>



