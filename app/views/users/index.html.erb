
<%= render 'users/list', user: current_user, book: @book  %>

<div class="col-xs-9">
	<h2>Users</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<thred>
					<tr>
						<th></th>
						<th>Image</th>
						<th>Name</th>
					</tr>
					<% @users.each do |user|%>
					<tr>
						<th><%= attachment_image_tag user, :user_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></th>
						<th><%= user.name%></th>
						<th><%= link_to 'Show', user_path(user.id), class: "book_#{user.id}" %></th>
					</tr>
					<% end %>
				</thred>
			</tbody>
		</table>
</div>


