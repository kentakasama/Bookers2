
<div class="col-md-6 col-md-offset-3">
	<h1>Editing Book</h1>
		<%= form_for(@book) do |f| %>
	<div class="field row">
		<label>Title</label>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>
	<div class="field row">
		<label>Opinion</label>
		<%= f.text_area :opinion, class: "col-xs-12 book_body" %>
	</div>
	<div class="actions row">
		<%= f.submit 'Update', class: "btn btn-primary col-xs-12" %>
	</div>
		<% end %>
			<%= link_to 'Show', book_path(@book.id), class: "book_#{@book.id}" %> |
			<%= link_to 'Back', books_path, class: "back" %>
</div>


