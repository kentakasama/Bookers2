<%= render 'users/list', user: current_user, book: @book %>


<div class="col-xs-9">
	<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<thred>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
					<% @books.each do |book|%>
					<tr>
						<th><%= attachment_image_tag book.user, :user_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></th>
						<th><%= link_to book.title, book_path(book.id) %></th>
						<th><%= book.opinion%></th>
					</tr>
					<% end %>
				</thred>
			</tbody>
		</table>
</div>


