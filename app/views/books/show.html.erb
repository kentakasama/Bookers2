<%= render 'users/list', user: current_user, book: @book  %>

<div class="col-xs-9">
	<h2>Book detail</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<thred>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
						<th></th>
					</tr>
					<tr>
						<th><%= attachment_image_tag @book_detail.user, :user_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></th>
						<th><%= @book_detail.title%></th>
						<th><%= @book_detail.opinion%></th>
