						<th><%= link_to 'Destroy', book_path(@book_detail.id), method: :delete, class: "btn-sm btn-danger destroy_book#{@book_detail.id}", data: { confirm: '本当に消しますか？' } %></th>
						<% end %>
					</tr>
				</thred>
			</tbody>
		</table>
</div>

